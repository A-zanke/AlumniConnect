{
  "apps": [{
    "name": "alumniconnect-backend",
    "script": "./server.js",
    "instances": 1,
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "production"
    },
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "max_memory_restart": "1G",
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s",
    "listen_timeout": 10000,
    "kill_timeout": 5000
  }]
}
